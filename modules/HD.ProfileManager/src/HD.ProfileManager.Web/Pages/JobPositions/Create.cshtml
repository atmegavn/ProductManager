@page
@using HD.ProfileManager.Localization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<ProfileManagerResource> Localizer

@model HD.ProfileManager.Web.Pages.JobPositions.CreateModel
@{
    ViewBag.Title = @Localizer["Create Position"].ToString();
}

<form id="create-story-form" class="needs-validation" asp-action="@ViewContext.RouteData.Values["action"]" method="post" role="form" novalidate>
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="@Url.Page("Index")">@Localizer["Job Positions"] </a></li>
                        <li class="breadcrumb-item active">@Localizer["Create"]</li>
                    </ol>
                </div>
                <h4 class="page-title">@Localizer["Create"]</h4>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <button type="submit" class="btn btn-sm btn-primary btn-">
                <span class="mdi mdi-content-save"></span> @Localizer["Save"]
            </button>

            <a href="@Html.Raw(Model.BackUrl)" class="btn btn-sm btn-secondary">
                <span class="mdi mdi-keyboard-return"></span> @Localizer["Back"]
            </a>
        </div>
    </div>
    <hr />
    @{
        if (ViewData["Exception"] != null)
        {
            <div class="row">
                <div class="col-12">
                    <div class="alert alert-danger" role="alert">
                        <i class="ri-close-circle-line me-2"></i> @ViewData["Exception"]
                    </div>
                </div>
            </div>
        }
    }
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <div class="mb-3">
                    <label asp-for="Form.JobFamilyId" class="form-label">@Localizer["Function"]</label>
                    <select asp-for="Form.JobFamilyId" asp-items="Model.JobFamiliesLookup" class="form-control"></select>
                    <span asp-validation-for="Form.JobFamilyId"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Form.JobLevel" class="form-label">@Localizer["Level"]</label>
                    <select asp-for="Form.JobLevel" asp-items="@Html.GetEnumSelectList<HD.ProfileManager.JobPositions.JobLevel>()" class="form-control"></select>
                    <span asp-validation-for="Form.JobLevel"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Form.Name" class="form-label">@Localizer["Name"]</label>
                    <input type="text" asp-for="Form.Name" class="form-control" required>
                    <span asp-validation-for="Form.Name"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Form.Description" class="form-label">@Localizer["Description"]</label>
                    <textarea asp-for="Form.Description" class="form-control"></textarea>
                    <span asp-validation-for="Form.Description"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Form.Requirement" class="form-label">@Localizer["Requirement"]</label>
                    <textarea asp-for="Form.Requirement" class="form-control"></textarea>
                    <span asp-validation-for="Form.Requirement"></span>
                </div>
            </div>
        </div>
    </div>
</form>
